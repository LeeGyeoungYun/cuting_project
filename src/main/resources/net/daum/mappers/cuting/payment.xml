<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
  <mapper namespace="Payment">
  <select id="pa_getPay" parameterType="pa" resultType="pa">
  select * from payment where pay_id = #{pay_id}
  </select>
  <insert id="pa_insert">
  insert into PAYMENT (pay_id,pay_total,pay_balance,pay_date) values (#{info_id},0,0,sysdate)
  </insert>
  </mapper>